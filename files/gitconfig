[user]
	useConfigOnly = true
[include]
	path = ~/.gitconfig.local
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	editor = nvim
	pager = delta
[fetch]
	prune = true
	pruneTags = true
[interactive]
	diffFilter = delta --color-only
[delta]
	syntax-theme = none
	navigate = true
	line-numbers = true
[merge]
	conflictStyle = zdiff3
[pull]
	ff = only
	rebase = true
[push]
	autoSetupRemote = true
[rebase]
	autoStash = true
[rerere]
	enabled = true
	autoupdate = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
